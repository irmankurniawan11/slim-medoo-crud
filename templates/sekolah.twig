{% extends 'layout/main.twig' %}
{% block content %}
	<div class="container my-5">
		<div class="px-6 py-6 shadow-sm">
			<div class="text-center bg-transparent">
				<h3>
					Data Sekolah
				</h3>
			</div>
			<div class="">
				<button type="button" class="btn btn-lg btn-primary my-2" onclick="showAddModal()">
					<i class="bi bi-person-plus-fill"></i>&nbsp;
					Add Data
				</button>
				<div class="table-responsive-md">
					<table id="schoolAddTable" class="table table-hover table-bordered table-responsive text-center">
						<thead class="table-dark">
							<tr>
								<th scope="col">
									No
								</th>
								<th scope="col">
									Nama Sekolah
								</th>
								<th scope="col">
									Alamat Sekolah
								</th>
								<th scope="col">
									Action
								</th>
							</tr>
						</thead>
						<tbody id="tbody">
							{# {% for school in data %}
							<tr>
								<td>{{loop.index}}</td>
								<td>{{school.nama_sekolah}}</td>
								<td>{{school.alamat}}</td>
								<td>
									<button class="btn btn-warning item_edit" data-id="{{school.id}}">
										<i class="bi bi-pencil-fill"></i>&nbsp; Edit
									</button>
									<button class="btn btn-danger" data-id="{{school.id}}">
										<i class="bi bi-trash3-fill"></i>&nbsp; Hapus
									</button>
								</td>
							</tr>
							{% endfor %} #}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

	{# MODAL #}

	<div class="modal fade" id="modal_addSchool" tabindex="-1" aria-labelledby="addSchoolModal" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">
						Tambah data
					</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<form id="addSchoolForm">
					<div class="modal-body">
						<div class="mb-3">
							<label for="">Nama Sekolah</label>
							<input id="nama_sekolah" type="text" name="nama_sekolah" class="form-control" required autofocus/>
						</div>
						<div class="mb-3">
							<label for="">Alamat Sekolah</label>
							<input id="alamat" type="text" name="alamat" class="form-control" required/>
						</div>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
						<button type="button" class="btn btn-primary" id="addSchoolButton">Add Data</button>
					</div>
				</form>
			</div>
		</div>
	</div>


	<div class="modal fade" id="ModalEdit" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">
						Edit data
					</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<form>
					<div class="modal-body">
						<div class="mb-3">
							<label for="">Customer Name</label>
							<input type="text" class="form-control " name="cust_code" id="edit_code" hidden>
							<input id="edit_name" type="text" name="cust_name" class="form-control" required autofocus/>
						</div>
						<div class="mb-3">
							<label for="">Customer City</label>
							<input id="edit_city" type="text" name="cust_city" class="form-control" required/>
						</div>
						<div class="mb-3">
							<label for="">Customer Country</label>
							<input id="edit_country" type="text" name="cust_country" class="form-control" required/>
						</div>
						<div class="mb-3">
							<label for="agentcode" class="form-label">AGENT</label>
							<select class="form-select" id="edit_agent" aria-label="Default select example" name="agent_code" required>
								<option selected>Select Agent</option>
								{% for agent in agents %}
									<option value="{{agent.agent_code}}">{{agent.agent_name}}</option>
								{% endfor %}
							</select>
						</div>
					</div>

					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
							Close
						</button>
						<button type="button" class="btn btn-primary" id="btn_update">Save Data</button>
					</div>
				</form>
			</div>
		</div>
	</div>


	<div class="modal fade" id="ModalDetail" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">
						Detail Data
					</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<div class="mb-3">
						<label class="form-label">Customer Code</label>
						<input type="text" class="form-control " name="cust_code" disabled>
					</div>
					<div class="mb-3">
						<label class="form-label">Customer Name</label>
						<input type="text" class="form-control " name="cust_name" disabled>
					</div>
					<div class="mb-3">
						<label class="form-label">Customer City</label>
						<input type="text" class="form-control " name="cust_city" disabled>
					</div>
					<div class="mb-3">
						<label class="form-label">Agent Name</label>
						<input type="text" class="form-control " name="agent_name" disabled>
					</div>
					<div class="mb-3">
						<label class="form-label">Agent Work Area</label>
						<input type="text" class="form-control " name="working_agent" disabled>
					</div>
					<div class="mb-3">
						<label class="form-label">Phone Agent</label>
						<input type="text" class="form-control " name="phone_agent" disabled>
					</div>
				</div>

				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
						Close
					</button>
				</div>
			</div>
		</div>
	</div>


	<div class="modal fade" id="ModalHapus" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h4 class="modal-title" id="myModalLabel">Delete Data</h4>
				</div>
				<form class="form-horizontal">
					<div class="modal-body">

						<input type="hidden" name="kode" id="textkode" value="">
						<div class="alert alert-danger">
							<p>Are you sure you want to delete this data?</p>
						</div>

					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
						<button class="btn_hapus btn btn-danger" id="btn_hapus">Delete</button>
					</div>
				</form>
			</div>
		</div>
	</div>

{% endblock %}